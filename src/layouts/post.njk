---
layout: base
---

<article class="container">
	<header>
		<h1>{{ title }}</h1>
		{% if subheading %}
		<p class="subheading">{{ subheading }}</p>
		{% endif %}
		<p class="date">{{ page.date | dateString }}</p>
		<div class="tags">
			Posted in {%- for tag in tags -%} {% if tag !== "posts" %}
			<a href="/tags/{{ tag }}">{{ tag }}</a>
			{% endif %} {%- endfor -%}
		</div>
		{% if headerButton %} <a href="{{ headerButton.url }}" class="button">{{ headerButton.text }}</a> {% endif %}
	</header>
	{{ content | safe }}

	{% include "author.njk" %} {% if config.disqusShortname %} {% if comments != false %}
	<aside class="comments">
		<h2>Comments</h2>
		{% include "disqus.njk" %}
	</aside>
	{% endif %} {% endif %}
</article>
